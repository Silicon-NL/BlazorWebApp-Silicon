<header class="header">
    <div class="container">
        <a id="logo" href="/">
            <img id="logo-mode" src="/images/Silicon-Logotype-Light-Mode.svg" alt="silicon logo">
        </a>

        <div id="menu">
            <nav>
                <NavLink class="menu-link" href="#Overview">Overview</NavLink>
                <NavLink class="menu-link" href="#Features">Features</NavLink>
                <NavLink class="menu-link" href="/contact">Contact</NavLink>

                <AuthorizeView>
                    <Authorized>
                        <NavLink class="menu-link" href="/Courses">Courses</NavLink>
                        <NavLink class="menu-link" href="/Admin">Admin</NavLink>
                    </Authorized>
                </AuthorizeView>

            </nav>
        </div>

        <div class="account-buttons">
            <AuthorizeView>
                <Authorized>
                    <NavLink class="profile-img">
                        <a href="/Account/Manage"><img src="/images/profile-header.svg" alt="profile image"></a>
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="btn-gray" href="/Account/Login">Sign in<i class="fa-solid fa-right-to-bracket"></i></NavLink>
                    <NavLink class="btn-theme" href="/Account/Register">Sign up<i class="fa-solid fa-user-plus"></i></NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <AuthorizeView>
            <Authorized>
                <button class="mobile-menu-btn"><i class="fa-solid fa-bars"></i></button>
                <div class="mobile-menu">
                    <nav>
                        <NavLink class="menu-link" href="/Details">Overview</NavLink>
                        <NavLink class="menu-link" href="/Courses">Courses</NavLink>
                        <NavLink class="menu-link" href="/Contact">Contact</NavLink>
                        <NavLink class="menu-link" href="/SignOut">Sign out</NavLink>
                        <NavLink class="menu-link" href="/Admin">Admin</NavLink>
                    </nav>
                </div>
            </Authorized>
        </AuthorizeView>

        <button class="mobile-menu-btn"><i class="fa-solid fa-bars"></i></button>
        <div class="mobile-menu">
            <nav>
                <NavLink class="menu-link" href="#showcase">Showcase</NavLink>
                <NavLink class="menu-link" href="#benefits">Features</NavLink>
                <NavLink class="menu-link" href="/Contact">Contact</NavLink>
                <NavLink class="menu-link" href="/SignIn">Sign in</NavLink>
                <NavLink class="menu-link" href="/SignUp">Sign up</NavLink>
            </nav>
        </div>

    </div>
</header>

